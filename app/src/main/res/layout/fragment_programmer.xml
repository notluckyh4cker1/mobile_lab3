<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:padding="8dp">

    <!-- Display Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorSurfaceVariant"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        app:cornerRadius="12dp">

        <!-- Expression Display -->
        <TextView
            android:id="@+id/expressionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Result Display -->
        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="22sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <!-- Results in different bases -->
        <TextView
            android:id="@+id/textHexResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HEX: 0"
            android:textSize="11sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/textDecResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEC: 0"
            android:textSize="11sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/textOctResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OCT: 0"
            android:textSize="11sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/textBinResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BIN: 0"
            android:textSize="11sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

    <!-- Base Selection Buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1"
        android:layout_marginBottom="8dp"
        android:columnOrderPreserved="false">

        <Button
            android:id="@+id/buttonHex"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="HEX"
            android:textSize="12sp"
            android:textAllCaps="false"
            style="@style/Button.Calculator.Number" />

        <Button
            android:id="@+id/buttonDec"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="DEC"
            android:textSize="12sp"
            android:textAllCaps="false"
            style="@style/Button.Calculator.Operation" />

        <Button
            android:id="@+id/buttonOct"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="OCT"
            android:textSize="12sp"
            android:textAllCaps="false"
            style="@style/Button.Calculator.Number" />

        <Button
            android:id="@+id/buttonBin"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="BIN"
            android:textSize="12sp"
            android:textAllCaps="false"
            style="@style/Button.Calculator.Number" />

    </GridLayout>

    <!-- Calculator Buttons - КОМПАКТНАЯ ВЕРСИЯ -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="5"
        android:rowCount="5"
        android:columnOrderPreserved="false"
        android:layout_marginBottom="4dp">

        <!-- Row 1: 7 8 9 / ⌫ -->
        <Button
            android:id="@+id/button7"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="7"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button8"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="8"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button9"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="9"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/Button.Calculator.Operation"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="/"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonDelete"
            style="@style/Button.Calculator.Operation"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="⌫"
            android:textSize="16sp" />

        <!-- Row 2: 4 5 6 * C -->
        <Button
            android:id="@+id/button4"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="4"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button5"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="5"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button6"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="6"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/Button.Calculator.Operation"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="*"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonClear"
            style="@style/Button.Calculator.Operation"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="C"
            android:textSize="16sp" />

        <!-- Row 3: 1 2 3 - + -->
        <Button
            android:id="@+id/button1"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="1"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button2"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="2"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button3"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="3"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonSubtract"
            style="@style/Button.Calculator.Operation"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="-"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/Button.Calculator.Operation"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="+"
            android:textSize="16sp" />

        <!-- Row 4: 0 A B C ( -->
        <Button
            android:id="@+id/button0"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="0"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonA"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="A"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonB"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="B"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonC"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="C"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonOpenBracket"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="("
            android:textSize="16sp" />

        <!-- Row 5: D E F = ) -->
        <Button
            android:id="@+id/buttonD"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="D"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonE"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="E"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonF"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="F"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonEquals"
            style="@style/Button.Calculator.Equals"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="="
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonCloseBracket"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text=")"
            android:textSize="16sp" />

    </GridLayout>

</LinearLayout>