<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:padding="8dp">

    <!-- Display Area -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/expressionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="32sp"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Engineering Functions - 5 кнопок в ряду -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="2"
        android:layout_marginBottom="4dp"
        android:columnOrderPreserved="false">

        <!-- Row 1 -->
        <Button
            android:id="@+id/buttonSin"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="sin"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonCos"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="cos"
            android:textSize="11sp" />

        <Button
            android:id="@+id/buttonTan"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="tan"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonLog"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="log"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonLn"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="ln"
            android:textSize="12sp" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/buttonSqrt"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="√"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonPower"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="x^y"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonPi"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="π"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonE"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="e"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonDelete"
            style="@style/Button.Calculator.Operation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="⌫"
            android:textSize="12sp" />

    </GridLayout>

    <!-- Basic Calculator Buttons - 4 кнопки в ряду -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:columnOrderPreserved="false">

        <!-- Row 1 -->
        <Button
            android:id="@+id/buttonClear"
            style="@style/Button.Calculator.Operation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="C" />

        <Button
            android:id="@+id/buttonOpenBracket"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="(" />

        <Button
            android:id="@+id/buttonCloseBracket"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text=")" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/Button.Calculator.Operation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="/" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/button7"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="9" />

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/Button.Calculator.Operation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="×" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/button4"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="6" />

        <Button
            android:id="@+id/buttonSubtract"
            style="@style/Button.Calculator.Operation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="-" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/button1"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="3" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/Button.Calculator.Operation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="+" />

        <!-- Row 5 -->
        <Button
            android:id="@+id/button0"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_margin="4dp"
            android:text="0" />

        <Button
            android:id="@+id/buttonDecimal"
            style="@style/Button.Calculator.Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="." />

        <Button
            android:id="@+id/buttonEquals"
            style="@style/Button.Calculator.Equals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="=" />

    </GridLayout>

</LinearLayout>